// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
  "name": "Pnut TypeScript Development",
  "image": "node:latest",
  "context": "..",
  "appPort": ["5002:5002", "9123:8123"],
  "postCreateCommand": "npm install",
  "runArgs": [
    "-v",
    "${env:HOME}${env:USERPROFILE}/.ssh:/tmp/.ssh", // This is added so you can push from inside the container
    "--init",
    "--privileged",
    "-v",
    "/var/run/docker.sock:/var/run/docker.sock" // Bind Docker socket
  ],
  "extensions": [
    "github.vscode-pull-request-github",
    "eamodio.gitlens",
    "pflannery.vscode-versionlens", // Add Version Lens extension
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "auchenberg.vscode-browser-preview",
    "davidanson.vscode-markdownlint",
    "redhat.vscode-yaml",
    "johnnywong.vscode-ts-whitespace-converter",
    "sj0000e.hexdiff",
    "ms-azuretools.vscode-docker" // Add Docker extension
  ],
  "settings": {
    "files.eol": "\n",
    "editor.tabSize": 2,
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "files.trimTrailingWhitespace": true
  }
}
