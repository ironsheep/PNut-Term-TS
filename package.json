{
  "name": "pnut-term-ts",
  "version": "0.1.0",
  "description": "A recreation of Chips' Debug listener but multiplatform combined with PST and downloader",
  "keywords": [
    "cli",
    "propeller2",
    "parallax.com",
    "spin2",
    "pasm2",
    "debug-terminal"
  ],
  "author": "Stephen M Moraco <stephen@ironsheep.biz>",
  "publisher": "IronSheepProductionsLLC",
  "homepage": "https://github.com/ironsheep/PNut-Term-TS",
  "bugs": {
    "url": "https://github.com/ironsheep/PNut-Term-TS/issues"
  },
  "license": "MIT",
  "main": "dist/pnut-term-ts.js",
  "bin": {
    "pnut-term-ts": "./dist/pnut-term-ts.min.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "help": "npm run build && dist/pnut-term-ts.min.js --help",
    "minify": "terser dist/pnut-term-ts.js -c -m -o dist/pnut-term-ts.min.js",
    "clean": "shx rm -rf ./dist ./release ./prebuilds ./fonts",
    "start": "node dist/pnut-term-ts.min.js",
    "postbuild": "shx chmod +x dist/pnut-term-ts.min.js dist/pnut-term-ts.js",
    "makeprebuild": "shx mkdir -p ./prebuilds && shx cp -r ./node_modules/@serialport/bindings-cpp/prebuilds/* ./prebuilds/",
    "makefonts": "shx mkdir -p ./fonts && shx cp -r ./src/fonts/* ./fonts/",
    "dist": "npm run packageLnx && npm run send2pi",
    "undist": "npm run getpirun && npm run getpilogic && npm run getbmps",
    "prebuild": "npm run clean && npm run makeprebuild && npm run makefonts",
    "buildnew": "tsc && npm run build:esbuild && npm run minify && node build.js",
    "build": "tsc && npm run build:esbuild && node scripts/insertBuildDate.js && npm run minify",
    "packageLnx": "npm run build && DEBUG=electron-builder electron-builder build --linux --config electron.builder.json",
    "packageMac": "npm run build && DEBUG=electron-builder electron-builder build --mac --config electron.builder.json",
    "packageWin": "npm run build && electron-builder build --win --config electron.builder.json",
    "build:esbuild": "node esbuild.config.js",
    "build:win": "tsc && electron-builder build --win",
    "build:mac": "tsc && electron-builder build --mac",
    "build:linux": "tsc && electron-builder build --linux",
    "send2pi": "scp ./release/pnut-*arm64.zip pi@pi5twr.home:/home/pi/Downloads",
    "getpirun": "scp pi@pi5twr.home:/home/pi/TEMP/la*.log ./LOGs",
    "getpiplot": "rm -f ./LOGs/p*.log;scp pi@pi5twr.home:/home/pi/TEMP/Logs/p*.log ./LOGs",
    "getpilogic": "rm -f ./LOGs/logi*.log;scp pi@pi5twr.home:/home/pi/TEMP/Logs/l*.log ./LOGs",
    "getpiterm": "rm -f ./LOGs/t*.log;scp pi@pi5twr.home:/home/pi/TEMP/Logs/t*.log ./LOGs",
    "getbmps": "scp pi@pi5twr.home:/home/pi/TEMP/*.bmp ./LOGs"
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^22.10.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-notarize": "^1.2.2",
    "esbuild": "^0.24.2",
    "shx": "^0.3.4",
    "terser": "^5.37.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@jimp/types": "^1.6.0",
    "@serialport/bindings-cpp": "^12.0.1",
    "@serialport/parser-readline": "12.0.0",
    "@serialport/stream": "12.0.0",
    "commander": "^13.1.0",
    "install": "^0.13.0",
    "jimp": "^1.6.0",
    "npm": "^11.0.0",
    "pixi.js": "^8.6.6",
    "serialport": "^12.0.0"
  }
}
