{
  "name": "pnut-termdebug-ts",
  "version": "0.0.1",
  "description": "A recreation of Chips' Debug listener but multiplatform",
  "keywords": [
    "cli",
    "propeller2",
    "parallax.com",
    "spin2",
    "pasm2",
    "debug-terminal"
  ],
  "author": "Stephen M Moraco <stephen@ironsheep.biz>",
  "publisher": "IronSheepProductionsLLC",
  "homepage": "https://github.com/ironsheep/PNut-TermDebug-TS",
  "bugs": {
    "url": "https://github.com/ironsheep/PNut-TermDebug-TS/issues"
  },
  "license": "MIT",
  "main": "dist/pnut-termdebug-ts.js",
  "bin": {
    "pnut-termdebug-ts": "./dist/pnut-termdebug-ts.min.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "help": "npm run build && dist/pnut-termdebug-ts.min.js --help",
    "minify": "terser dist/pnut-termdebug-ts.js -c -m -o dist/pnut-termdebug-ts.min.js",
    "clean": "rm -rf ./dist ./release ./prebuilds",
    "start": "node dist/pnut-termdebug-ts.min.js",
    "postbuild": "chmod +x dist/pnut-termdebug-ts.min.js dist/pnut-termdebug-ts.js",
    "makeprebuild": "mkdir -p ./prebuilds && cp -pr ./node_modules/@serialport/bindings-cpp/prebuilds/* ./prebuilds/",
    "prebuild": "npm run clean && npm run makeprebuild",
    "buildnew": "tsc && npm run build:esbuild && npm run minify && node build.js",
    "build": "tsc && npm run build:esbuild && node scripts/insertBuildDate.js && npm run minify",
    "package": "npm run build && DEBUG=electron-builder electron-builder build --win --linux --config electron.builder.json",
    "packageMac": "npm run build && DEBUG=electron-builder electron-builder build --mac --config electron.builder.json",
    "build:esbuild": "node esbuild.config.js",
    "build:win": "tsc && electron-builder build --win",
    "build:mac": "tsc && electron-builder build --mac",
    "build:linux": "tsc && electron-builder build --linux",
    "distribute": "npm run send2pi",
    "send2pi": "scp ./release/pnut-*arm64.zip pi@pi5twr.home:/home/pi/Downloads"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-notarize": "^1.2.2",
    "esbuild": "^0.24.0",
    "terser": "^5.37.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@serialport/bindings-cpp": "^12.0.1",
    "@serialport/parser-readline": "12.0.0",
    "@serialport/stream": "12.0.0",
    "commander": "^12.1.0",
    "install": "^0.13.0",
    "npm": "^11.0.0",
    "pixi.js": "^8.6.5",
    "serialport": "^12.0.0"
  }
}
