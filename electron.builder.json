{
  "appId": "biz.ironsheep.pnut-termdebug-ts",
  "productName": "pnut-termdebug-ts",
  "files": [
    "dist/**/*",
    "!dist/pnut-termdebug-ts",
    "node_modules/**/*",
    "package.json",
    "prebuilds/**/*"
  ],
  "directories": {
    "output": "release"
  },
  "extraMetadata": {
    "main": "dist/pnut-termdebug-ts.min.js"
  },
  "asar": true,
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": ["dmg"],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "./buildSupport/entitlements.mac.plist",
    "entitlementsInherit": "./buildSupport/entitlementsInherit.mac.plist",
    "identity": "${env.APPLE_TEAM_ID}"
  },
  "win": {
    "target": ["zip"]
  },
  "linux": {
    "category": "Utility",
    "target": ["zip"]
  },
  "afterSign": "scripts/notarize.js"
}
