{
  "appId": "biz.ironsheep.pnut-term-ts",
  "productName": "PNut-Term-TS",
  "files": ["dist/**/*", "!dist/pnut-term-ts", "node_modules/**/*", "package.json", "prebuilds/**/*"],
  "extraResources": [
    {
      "from": "fonts/",
      "to": "fonts/",
      "filter": ["**/*"]
    },
    {
      "from": "DOCs/",
      "to": "DOCs/",
      "filter": ["**/*"]
    }
  ],
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "extraMetadata": {
    "main": "dist/pnut-term-ts.min.js",
    "ElectronTeamId": "T67FW2JCJW"
  },
  "asar": true,
  "asarUnpack": ["**\\*.{node,dll}"],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "default",
        "arch": ["universal"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "./buildSupport/macos/entitlements.mac.plist",
    "entitlementsInherit": "./buildSupport/macos/entitlementsInherit.mac.plist",
    "extendInfo": "./buildSupport/macos/Info.plist"
  },
  "win": {
    "target": ["zip"],
    "publish": {
      "provider": "github",
      "owner": "ironsheep",
      "repo": "PNut-Term-TS"
    }
  },
  "linux": {
    "category": "Utility",
    "target": ["zip"],
    "publish": {
      "provider": "github",
      "owner": "ironsheep",
      "repo": "PNut-Term-TS"
    }
  },
  "afterSign": "scripts/notarize.js"
}
